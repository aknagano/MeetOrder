
<%= render 'layouts/error', obj: @customer %>

<h5 class="bg-secondary" style="width: 300px; margin:30px 0 20px 220px;">
   <b><%= @customer.enterprise_name %></b>様の<b>会員情報編集</b>
</h5>



<div class="container">
    <div class="row">
        <div class="col-10">
            <%= form_with model: @customer ,url: admin_customer_path(@customer.id), method: :patch do |f| %>
                <table class="table table-borderless">
                   <thead>
                       <tr>
                           <th></th>
                           <th></th>
                           <th></th>
                       </tr>
                   </thead>
                   <tbody>
                       <tr>
                           <td><b>会員ID</b></td>
                           <td><%= @customer.id %></td>
                           <td></td>
                       </tr>
                       <tr>
                           <td><b>企業名</b></td>
                           <td><%= f.text_field :enterprise_name %></td>
                           <td></td>
                       </tr>
                       <tr>
                           <td>フリガナ</td>
                           <td><%= f.text_field :enterprise_name_kana %></td>
                           <td></td>
                       </tr>
                       <tr>
                           <td>郵便番号</td>
                           <td><%= f.text_field :post_code %></td>
                           <td></td>
                       </tr>
                       <tr>
                           <td>住所</td>
                           <td><%= f.text_field :address, size: "60×5" %></td>
                           <td></td>
                       </tr>
                       <tr>
                           <td>電話番号</td>
                           <td><%= f.text_field :telephone_number %></td>
                           <td></td>
                       </tr>
                       <tr>
                           <td>メールアドレス</td>
                           <td><%= f.text_field :email  %></td>
                           <td></td>
                       </tr>
                       <tr>
                           <td>会員ステータス</td>
                           <td>
                               <%= f.radio_button :is_customer_status, :active %><%= f.label :is_customer_status,"有効" %>&emsp;
                               <%= f.radio_button :is_customer_status, :inactive %><%= f.label :is_customer_status,"退会" %>
                           </td>
                           <td></td>
                       </tr>
                       <tr>
                           <td></td>
                           <td><%= f.submit '変更を保存',class:"btn btn-success" %></td>
                       </tr>
                   </tbody>
          　　　　</table>
        　　<% end %>
        </div>
        <div class="col-2"></div>
    </div>
</div>