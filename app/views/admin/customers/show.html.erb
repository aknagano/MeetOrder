
<div class="container mt-5">
  <h2 class="mb-4 text-center"><%= @customer.enterprise_name %>様の会員詳細</h2>
  <div class="d-flex justify-content-center">
    <div class="mb-4 text-left">
      <table>
        <tr>
          <td>会員ID </td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名 </td>
          <td><%= @customer.enterprise_name %></td>
        </tr>
        <tr>
          <td>フリガナ </td>
          <td><%= @customer.enterprise_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号 </td>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <td>住所 </td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号 </td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス </td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス </td>
          <td><%= @customer.is_customer_status ? '有効' :  '退会済み'%></td>
        </tr>
      </table>
    </div>
    </div>
    <p class="mb-4 text-center">
     <%= link_to '編集する', edit_admin_customer_path(@customer), class: 'btn btn-success btn-space' %>
     <%= link_to '注文履歴一覧を見る', admin_root_path, class: 'btn btn-info' %>
    </p>
</div>