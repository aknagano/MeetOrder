<%= render 'layouts/error',obj: @item %>
    
<h5 class="bg-secondary" style="width: 130px; margin:30px 0 20px 200px;">商品新規登録</h5>
<div class="container">
  <div class="form-group row">
   <div class="col-2"></div>
      <div class="col-6">

<%= form_with(model: @item, url: '/admin/items', local: false, multipart: true) do |f| %>
  <table>
    <tr>
      <td><%= f.label :商品画像 %></td>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <td><%= f.label :商品名 %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :商品紹介 %></td>
      <td><%= f.text_area :introduction %></td>
    </tr>
    <tr>
      <td><%= f.label :産地 %></td>
      <td><%= f.select :production_area_id, options_from_collection_for_select(@production_areas, :id, :name), include_blank: "選択してください" %></td>
    </tr>
    <tr>
      <td><%= f.label :税抜価格 %></td>
      <td><%= f.text_field :price %></td>
    </tr>
  
  <div class="col-9">
    <tr>
      <td><%= f.label :is_active, '販売ステータス'%></td>
        <td>
          <%= f.collection_radio_buttons :is_active, [[true, '販売中'], [false, '販売停止中']], :first, :last %>
        </td>
    </tr>
  </div>
   </table>
  <%= f.submit '新規登録',class: "btn btn-success" %>
<% end %>
    </div>
  </div>
</div>
