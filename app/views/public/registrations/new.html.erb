<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :企業名 %><br />
    <%= f.text_field :enterprise_name, autofocus: true, autocomplete: "enterprise_name" %>
  </div>
  
  <div class="field">
    <%= f.label :企業名カナ %><br />
    <%= f.text_field :enterprise_name_kana, autofocus: true, autocomplete: "enterprise_name_kana" %>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <td><%= f.label :郵便番号（ハイフンなし） %></td>
    <td><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %></td>
  </div>
  
  <div class="field">
    <td><%= f.label :住所 %></td>
    <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
  </div>
  
  <div class="field">
    <td><%= f.label :電話番号（ハイフンなし） %></td>
    <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<div class="mt-5">
  <h4>既に登録済みの方</h4>
  <p><%= render "public/shared/links" %>からログインしてください。</p>
</div>
