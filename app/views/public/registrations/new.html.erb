<div class="container">

  <h2>新規会員登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
    <table>
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
    　    <th></th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td class="mb-2">企業名</td>
          <td class="field">
            <%= f.text_field :enterprise_name, autofocus: true, autocomplete: "enterprise_name", class: "mb-2 mx-5" %>
          </td>
        </tr>
        
        <tr>
          <td class="mb-2">企業名カナ</td>
          <td class="field">
            <%= f.text_field :enterprise_name_kana, autofocus: true, autocomplete: "enterprise_name_kana", class: "mb-2 mx-5" %>
          </td>
        </tr>
        
        <tr>
          <td class="mb-2">メールアドレス</td>
          <td class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mb-2 mx-5" %>
          </td>
        </tr>
        
        <tr>
          <td class="mb-2">郵便番号（ハイフンなし)</td>
          <td class="field">
            <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", class: "mb-2 mx-5" %>
          </td>
        </tr>
        
        <tr>
          <td class="mb-2">住所</td>
          <td class="field">
            <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "mb-2 mx-5" %>
          </td>
        </tr>
        
        <tr>
          <td class="mb-2">電話番号(ハイフンなし)</td>
          <td class="field">
            <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "mb-2 mx-5" %>
          </td>
        </tr>
        
        <tr>
          <td class="mb-2">パスワード(6文字以上)</td>
          <td class="field">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "mb-2 mx-5" %>
          </td>
        </tr>
        
        <tr>
          <td class="mb-2">パスワード(確認用)</td>
          <td class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mb-2 mx-5" %>
          </td>
        </tr>
        
        <tr>
          <td></td>
          <td class="actions">
            <%= f.submit "新規登録", class: "btn btn-outline-success rounded-pill mb-2 mx-5" %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
  
  <div>既に登録済みの方</div>
    <p><%= render "public/shared/links" %>　 からログインしてください。</p>
</div>